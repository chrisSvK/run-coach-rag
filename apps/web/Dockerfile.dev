FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 3000

# Run in development mode
# Turbopack is used by default in Next.js 16 and respects polling env vars
CMD ["npm", "run", "dev"]
